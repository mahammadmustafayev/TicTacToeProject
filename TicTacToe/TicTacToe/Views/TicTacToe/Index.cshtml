@model TicTacToe.Models.TicTacToeEntity

<h2>Tic-Tac-Toe</h2>
<h3>@Model.Winner</h3>
<h4>Current Player: @Model.CurrentPlayer</h4>

<table>
    @for (int i = 0; i < 3; i++)
    {
        <tr>
            @for (int j = 0; j < 3; j++)
            {
                <td>
                    <form asp-action="MakeMove" method="post">
                        <input type="hidden" name="row" value="@i" />
                        <input type="hidden" name="col" value="@j" />
                        <button type="submit" class="tic-tac-toe-button">
                            @(Model.Board[i, j] == ' ' ? "-" : Model.Board[i, j].ToString())
                        </button>
                    </form>
                </td>
            }
        </tr>
    }
</table>

<form asp-action="Reset" method="post">
    <button type="submit">Reset Game</button>
</form>

<style>
    table {
        border-collapse: collapse;
    }
    td {
        width: 50px;
        height: 50px;
        text-align: center;
    }
    .tic-tac-toe-button {
        width: 100%;
        height: 100%;
        font-size: 20px;
    }
</style>