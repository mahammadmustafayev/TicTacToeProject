@model TicTacToe.Models.TicTacToeEntity

<h1 class="text-white font-monospace " >Tic-Tac-Toe</h1>
<h3 class="text-white">@Model.Winner</h3>
<h4 class="text-white ms-3">Current Player: @Model.CurrentPlayer</h4>

<table class="ms-5  ">
    @for (int i = 0; i < 3; i++)
    {
        <tr >
            @for (int j = 0; j < 3; j++)
            {
                <td>
                    <form asp-action="MakeMove" method="post" >
                        <input type="hidden" name="row" value="@i" />
                        <input type="hidden" name="col" value="@j" />
                        <br />
                        <button type="submit" class="tic-tac-toe-button rounded">
                            @(Model.Board[i, j] == ' ' ? "-" : Model.Board[i, j].ToString())
                        </button>
                    </form>
                </td>
            }
        </tr>
    }
</table>
<br />

<form asp-action="Reset" method="post" class="ms-5">
    <button type="submit" class="btn btn-primary btn-lg">Reset Game</button>
</form>

<style>
    h1{
        font-size:3rem;
    }
    table {
        border-collapse: collapse;
    }
    td {
        width: 90px;
        height: 90px;
        text-align: center;
